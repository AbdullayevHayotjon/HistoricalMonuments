@model Obidalar.Models.Obida

@{
    ViewData["Title"] = Model.Nomi;
}

<div class="container d-flex justify-content-center mt-5">
    <div class="row w-100" style="max-width: 900px;">
        <div class="col-12">
            <img src="@Model.RasmUrl" class="img-fluid rounded mb-3 mx-auto d-block" alt="@Model.Nomi" />
            <h2 class="text-center">@Model.Nomi</h2>
            <p><strong>Joylashuv:</strong> @Model.Viloyat</p>
            <p><strong>Yil:</strong> @Model.Yil</p>
            <p>@Model.Tavsif</p>

            @if (Context.Session.GetString("IsAdmin") != "true")
            {
                <hr />
                <h5>Sharh qoldiring:</h5>
                <form asp-action="SharhYoz" method="post">
                    <input type="hidden" name="ObidaId" value="@Model.Id" />
                    <textarea name="Matn" class="form-control" required></textarea>
                    <div class="text-end">
                        <button class="btn btn-primary btn-sm mt-2" type="submit">Jo‘natish</button>
                    </div>
                </form>
                <hr />
            }

            <h5>Mavjud sharhlar:</h5>
            @foreach (var sharh in Model.Sharhlar ?? new List<Obidalar.Models.Sharh>())
            {
                <div class="border rounded p-2 mb-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-0">@sharh.Matn</p>
                        <small class="text-muted ms-3">@sharh.Sana.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</small>
                    </div>
                </div>
            }

            <div class="mt-4 d-flex justify-content-between align-items-center">
                <div class="d-flex gap-2">
                    @if (Context.Session.GetString("IsAdmin") == "true")
                    {
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning btn-sm">✏️ Tahrirlash</a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">🗑 O‘chirish</button>
                    }
                </div>

                <div>
                    <a href="@Url.Action("Index", "Obida")" class="btn btn-secondary btn-sm">⬅️ Orqaga</a>
                </div>
            </div>

            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">O‘chirishni tasdiqlash</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Haqiqatan ham ushbu obidani o‘chirmoqchimisiz?
                        </div>
                        <div class="modal-footer">
                            <form asp-action="Delete" method="post">
                                <!-- Delete action uchun IDni yuborish -->
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Yo‘q</button>
                                <button type="submit" class="btn btn-danger">Ha, o‘chirish</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@model Obida

<h2 class="text-center mb-4">Yangi Obida Qo‘shish</h2>

<div class="container d-flex justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <label class="form-label">Nomi</label>
                <input asp-for="Nomi" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Viloyat</label>
                <input asp-for="Viloyat" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Yil</label>
                <input asp-for="Yil" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Tavsif</label>
                <textarea asp-for="Tavsif" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Rasm</label>
                <input type="file" name="Rasm" class="form-control" required />
            </div>
            <div class="d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-success">Qo‘shish</button>
            </div>
        </form>

        <div class="d-flex justify-content-end mt-3">
            <a href="@Url.Action("Index", "Obida")" class="btn btn-secondary">⬅️ Orqaga</a>
        </div>
    </div>
</div>

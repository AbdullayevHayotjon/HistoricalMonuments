<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Obidalar</title>

    <!-- Faqat bitta Bootstrap qo‘shamiz -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- O‘z css -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- CSS qo‘shimchalari -->
    <style>
        body {
            display: flex;
            flex-direction: column;
            height: 100vh; /* Ekran balandligini to'liq qamrab olish */
            margin: 0;
        }

        .container {
            flex-grow: 1; /* Sahifa asosiy kontentiga to'liq joy berish */
        }

        footer {
            background-color: #ffffff;
            padding: 1rem;
            text-align: center;
        }

        header {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand logo-text" href="#">
                    <span class="logo-icon">🏛</span>
                    <span class="logo-title">Obidalar</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                    @if (Context.Session.GetString("IsAdmin") == "true")
                    {
                        <a class="btn btn-custom-logout me-2" href="@Url.Action("Logout", "Login")">🚪 Logout</a>
                    }
                    else
                    {
                        <a class="btn btn-custom-login me-2" href="@Url.Action("Index", "Login")">
                            🔐 Sign In
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2025 - Obidalar loyihasi
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
